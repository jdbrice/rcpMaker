<config>

	<jobType>PresentPidYield</jobType>

	<PidYieldPresenter>
		<Logger color="true" logLevel="info" globalLogLevel="warning" />
		<Reporter> <output url="../products/presentation/15GeV/present.pdf" width="800" height="500" /> </Reporter>	

		<input>
			<fit url="../products/sgf/15GeV/sgf_full.root" />
