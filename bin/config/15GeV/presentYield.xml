		</input>

		<output path="../products/presentation/15GeV/">
			<data url="data.root"/>
		</output>

		<!-- fit bins : FROM sgfRunner.xml-->
		<FitRange>
			<ptBins min="0" max="35" />
			<centralityBins>0, 1, 2, 3, 4, 5, 6</centralityBins>
			<etaBins>0, 1, 2 </etaBins>
			<charges>-1, 1</charges>
		</FitRange>

