	<EventCuts>
		<triggerMask> 36 </triggerMask> <!-- BBC_MB -->
		<vertexZ min="-30" max="30" />
		<vertexR min="0.0" max="1.0" />
		<vertexROffset x="0" y="0.89" />
		<nTofMatchedTracks min="3" max="10000"/>
