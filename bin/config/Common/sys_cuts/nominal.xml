	<!-- Cuts applied to Tracks -->
	<TrackCuts>
		<pt min="0.1" max="100" />
		<rapidity min="-0.25" max="0.25" />

		<!-- Track Quality -->
		<nHitsFit min="16" />
		<nHitsFitOverPossible min="0.52" />
		<nHitsDedx min="11" />
		<dca min="0" max="3.0" />
		<ptGlobalOverPrimary min="0.7" max="1.42857" />
		
		<!-- TOF PID -->
		<matchFlag min="1" max="3" />
		<yLocal min="-1.6" max="1.6" />
		<zLocal min="-2.8" max="2.8" />
		
	</TrackCuts>


</config>