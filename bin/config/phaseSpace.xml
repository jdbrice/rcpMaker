<?xml version="1.0" encoding="UTF-8"?>
<config>

	<jobType>PidPhaseSpace</jobType>

	<PidPhaseSpace>
		<Logger color="true">
			<logLevel>info</logLevel>
		</Logger>
		<Reporter>
			<output url="../products/phaseSpace/rp.pdf"/>
		</Reporter>	
		
		<DataSource treeName="PicoDst" url="/Users/danielbrandenburg/bnl/local/data/Run14/LBNL/">
			
			<!-- Set all branches off -->
			<BranchStatus status="0">*</BranchStatus>
			<!-- Turn on only the ones you need -->
			<BranchStatus status="1">
				Event*,
				Track*
			</BranchStatus>
			
		</DataSource>

		<output>
			<data>../products/phaseSpace/pid.root</data>
			<Reports>../products/phaseSpace/</Reports>
		</output>

		<Bichsel>
			<table>dedxBichsel.root</table>
			<method>0</method>
		</Bichsel>

		<!-- Common Resources -->
		<MakeQA config="config/qaHistograms.xml" event="true" track="true" />
		<Cuts config="config/cuts.xml" />
		<RMCParams config="config/StRMCParams.xml" />

		<!-- the bins into which the 9 centrality bins are mapped. -->
		<CentralityMap>
			0 :: 0,
			1 :: 0,
			8 :: 1
		</CentralityMap>


		<enhanceDistributions tof="1.0" dedx="1.0"/>
		
		<PhaseSpaceRecentering>
			<centerSpecies>K</centerSpecies>
			<sigma tof="0.012" dedx="0.033"/>
			<method>nonlinear</method>
		</PhaseSpaceRecentering>

		<makePhaseSpace 2D="false" enhanced="true" /> 

		<histograms >

			<Histo name="betaRaw" title="#beta^{-1}" xBins="bin.pt" yBins="bin.tofRaw" />
			<Histo name="trBeta" title="" xBins="bin.pt" yBins="bin.tof" />
			<Histo name="nlBeta" title="" xBins="bin.pt" yBins="bin.tof"/>
			<Histo name="dedxRaw" title="dEdx" xBins="bin.pt" yBins="bin.dedxRaw" />
			<Histo name="trDedx" title="" xBins="bin.pt" yBins="bin.dedx" />
			<Histo name="nlDedx" title="" xBins="bin.pt" yBins="bin.dedx"/>
			<Histo name="eta" type="1D" title="eta" nBinsX="200" minX="-2" maxX="2" />

		</histograms>

		<style hide="true">
			<tof title="#beta^{-1}" logy="1" draw="pe"/>
			<dedx title="dedx" logy="1" draw="pe"/>
		</style>

	</PidPhaseSpace>


	<bin hide="true" >
		
		<pt width="0.05" min="0.2" max="4.0" />
		<eta>0.0, 0.2, 0.4, 0.6 </eta>
		<charge> -1.5, -0.5, 0.5, 1.5 </charge>

		<tof width="0.006" min="-1" max="1" />
		<dedx width="0.015" min="-0.75" max="0.75" />
		<tofRaw width="0.0024" min="0.9" max="3" />
		<dedxRaw width="0.012" min="1" max="6cd" />

		<padding tof=".15" dedx=".15" tofScale="0.05" dedxScale="0.05" />

	</bin>

</config>
