<?xml version="1.0" encoding="UTF-8"?>
<config>

	<jobType>InclusiveSpectra</jobType>

	<InclusiveSpectra>

		<Logger color="true" logLevel="warning" />
		
		<input>
			<dst treeName="PicoDst" url="/Users/danielbrandenburg/bnl/local/data/Run14/LBNL/11GeVCompare/"/>
		</input>

		<output>
			<data>../products/inclusive/11GeV/inclusiveSpectra.root</data>
		</output>

		<!-- Common Resources -->
		<MakeQA config="config/11GeV/qaHistograms.xml" event="true" track="true" tof="false" dedx="false" />
		<Cuts config="config/11GeV/cuts.xml" />
		<RMCParams config="config/11GeV/StRMCParams.xml" />

		<!-- the bins into which the 9 centrality bins are mapped. -->
		<CentralityMap>
			0 :: 6,
			1 :: 6,
			2 :: 5,
			3 :: 5,
			4 :: 4,
			5 :: 3,
			6 :: 2,
			7 :: 1,
			8 :: 0
		</CentralityMap>

		<!-- histograms to auto-make -->
		<histograms>
			<ptBase type="1D" title="p_{T} [GeV]; p_{T} [GeV]; #Events"  xBins="bin.pt"/>
			<ptAll type="1D" title="p_{T} [GeV]; p_{T} [GeV]; #Events"  xBins="bin.pt"/>
			<ptPos type="1D" title="p_{T} [GeV]; p_{T} [GeV]; #Events"  xBins="bin.pt"/>
			<ptNeg type="1D" title="p_{T} [GeV]; p_{T} [GeV]; #Events"  xBins="bin.pt"/>
		</histograms>

	</InclusiveSpectra>


	<bin hide="true" >
		
		<!-- Based on Evan's thesis.v5.pdf -->
		<!-- .1 from .5 to 2.5 => 15 bins -->
		<!-- .2 from 2.0 to 3.0 => 5 bins -->
		<pt>
			0.5, 0.6, 0.7, 0.8, 0.9, 1.0, 1.1, 1.2, 1.3, 1.4, 1.5, 1.6, 1.7, 1.8, 1.9, 2.0, 
			2.2, 2.4, 2.6, 2.8, 3.0, 	
			3.4,						
			4.4,					
			5.0
		</pt>
		
		<eta>0.0, 0.2, 0.4, 0.5 </eta>

		<charge> -1.5, -0.5, 0.5, 1.5 </charge>

		<tof width="0.006" min="-1" max="1" />
		<dedx width="0.03" min="-0.75" max="0.75" />
		<!--
		<tof width="0.006" min="-1" max="1" />
		<dedx width="0.015" min="-0.75" max="0.75" />
		-->
		<tofRaw width="0.0024" min="0.9" max="3" />
		<dedxRaw width="0.012" min="1" max="6cd" />

		<padding tof=".15" dedx=".15" tofScale="0.05" dedxScale="0.05" />

	</bin>


</config>
