	<PidPhaseSpace>
		<Logger>
			<logLevel>info</logLevel>
		</Logger>
		<Reporter>
			<output>ps/rp.pdf</output>
		</Reporter>	
		
		<input>
			<dst treeName="tree" maxFiles="1" url="/Users/danielbrandenburg/bnl/local/data/BBCMB14_015/" nEvents="10000"/>
		</input>

		<output>
			<data>ps/data.root</data>
		</output>

		<Bichsel>
			<table>dedxBichsel.root</table>
			<method>0</method>
		</Bichsel>

		<RMCParams>StRMCParams.xml</RMCParams>
		<correctRefMult zVertex="true" mcg="false" />

		<centrality>
			<all min="0" max="450" />
			<0to5 min="235" max="400" />
			<60to80 min="10" max="20" />

			<!-- prelim -->
			<!--<0to5 min="228" max="500" />-->
			<!--<60to80 min="14" max="37" />-->
		</centrality>

		<enhanceDistributions tof="1.0" dedx="1.0"/>
		
		<PhaseSpaceRecentering>
			<centerSpecies>K</centerSpecies>
			<sigma tof="0.012" dedx="0.033"/>
			<method>nonlinear</method>
		</PhaseSpaceRecentering>

		<eventCuts>
			<vertexZ min="-75" max="75" />
			<vertexR min="0.0" max="1.0" />
			<vertexROffset x="0" y="0.86" />
			<nTZero min="0" max="10000"/>
		</eventCuts>
		<trackCuts>
			<dca min="0" max="1.0" />
			<nHits min="15" />
			<nHitsDedx min="10"  />
			<nHitsFitOverPossible min="0.52" />
			<yLocal min="-1.8" max="1.8" />
		</trackCuts>

		<makeQA event="false" track="false"/>
		<makePhaseSpace 2D="false" enhanced="true" /> 
		<histograms >

			<betaRaw title="#beta^{-1}" xBins="binning.pt" yBins="binning.tofRaw" />

			<trBeta title="" xBins="binning.pt" yBins="binning.tof" />
			<nlBeta title="" xBins="binning.pt" yBins="binning.tof"/>

