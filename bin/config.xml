<config>

	<!-- input of data and or root files -->
	<input>
		<rootIn file="qa.root" />
		<dataDir maxFiles="40" >/Users/danielbrandenburg/bnl/local/data/auau15Rcp/</dataDir>
		<pidLUT>pidLUT.root</pidLUT>
	</input>

	<!-- output of root data file and PDF report -->
	<output>
		<base></base>
		<root>qa.root</root>
		<report>rqa.pdf</report>
		<pidLUT>lutOut.root</pidLUT>
	</output>

	<pid>
		<species>K, Pi</species>
		<nSigma dedx="1" deltaBeta="1" />
	</pid>

	<!-- Analysis cuts -->
	<cuts>
		<central>.05</central>
		<peripheral min=".60" max=".80" />
		<pt>0.1</pt>
		<vz min="-70" max="70" />
		<vrMax>1.0</vrMax>
		<vertexOffset x="0" y="-.9115" z="0" />
	</cuts>

	<!-- histograms -->
	<histograms hide="true">
		
		<refMult type="1D" title="Centrality Selection; refMult; #"  	nBinsX="350" x1="0" x2="350">
			<style draw="h" logY="1"/>
		</refMult>

		<central type="1D" title="Reference Multiplicity : central"  	nBinsX="350" x1="0" x2="350">
			<style 		draw="h same" linecolor="2" fillcolor="2" logY="1"  />
		</central>
		<peripheral    	type="1D" title="Reference Multiplicity : peripheral"  	nBinsX="350" x1="0" x2="350">
			<style draw="h same" linecolor="3" fillcolor="3" logY="1"  />
		</peripheral>

		<ptAll        	type="1D" title="pt All centrality, Central, Peripheral"  nBinsX="50" x1="0" x2="5">
			<style draw="h" linewidth="2" linecolor="blue" legend="All, L" />
		</ptAll>
		<ptCentral    	type="1D" title="pt Central" 	nBinsX="50" x1="0" x2="5">
			<style draw="h same" linewidth="2" linecolor="red" legend="Central, L" />
		</ptCentral>
		<ptPeripheral  	type="1D" title="pt Peripheral" nBinsX="50" x1="0" x2="5">
			<style draw="h same" linewidth="2" linecolor="green" legend="Peripheral, L" />
		</ptPeripheral>
		
		<ptPeripheralScaled  	type="1D" title="pt Peripheral" 							nBinsX="15" x1="0" x2="4"/>
		<ptRatio 		type="1D" title="R_{CP} (0-5%) / (60-80%); P_{T} [GeV/c]; R_{CP}" 	nBinsX="15" x1="0" x2="4"/>


		<ptAllPi        	type="1D" title="pt All centrality, Central, Peripheral"  nBinsX="50" x1="0" x2="5"/>
		<ptCentralPi    	type="1D" title="pt Central" 	nBinsX="50" x1="0" x2="5"/>
		<ptPeripheralPi  	type="1D" title="pt Peripheral" nBinsX="50" x1="0" x2="5"/>
		<ptPeripheralScaledPi  	type="1D" title="pt Peripheral" 							nBinsX="15" x1="0" x2="4"/>
		<ptRatioPi 		type="1D" title="R_{CP} (0-5%) / (60-80%); P_{T} [GeV/c]; R_{CP}" 	nBinsX="15" x1="0" x2="4"/>

		<ptAllK        	type="1D" title="pt All centrality, Central, Peripheral"  nBinsX="50" x1="0" x2="5"/>
		<ptCentralK    	type="1D" title="pt Central" 	nBinsX="50" x1="0" x2="5"/>
		<ptPeripheralK  	type="1D" title="pt Peripheral" nBinsX="50" x1="0" x2="5"/>
		<ptPeripheralScaledK  	type="1D" title="pt Peripheral" 							nBinsX="15" x1="0" x2="4"/>
		<ptRatioK 		type="1D" title="R_{CP} (0-5%) / (60-80%); P_{T} [GeV/c]; R_{CP}" 	nBinsX="15" x1="0" x2="4"/>



		


		<vr 			type="1D" title="TPC V_{R}; V_{R} [cm]; #" nBinsX="200" x1="0" x2="4"/>
		<vrCut 			type="1D" title="VrCut" nBinsX="200" x1="0" x2="4"/>
		<vrOffset 		type="1D" title="Vr Offset" nBinsX="200" x1="0" x2="4"/>
		
		<vz 			type="1D" title="TPC Z Vertex; V_{Z} [cm]; # " nBinsX="600" x1="-300" x2="300"/>
		<vzCut 			type="1D" title="Vz Cut" nBinsX="600" x1="-300" x2="300"/>
		<vzOffset 		type="1D" title="Vz" nBinsX="600" x1="-300" x2="300"/>

		<vxy 			type="2D" title="Vxy;x;y" nBinsX="600" x1="-3.5" x2="3.5" nBinsY="600" y1="-3.5" y2="3.5"/>
		<vxyCut 		type="2D" title="TPC Vertex xy After Cut;x [cm];y[cm]" nBinsX="600" x1="-3.5" x2="3.5" nBinsY="600" y1="-3.5" y2="3.5"/>
		<vxyOffset 		type="2D" title="TPC Vertex xy;x [cm];y[cm]" nBinsX="600" x1="-3.5" x2="3.5" nBinsY="600" y1="-3.5" y2="3.5"/>

		<dcaMag type="1D" title="DCA Mag; DCA magnitude; dN/ddca" nBinsX="200" x1="0" x2="5" />


	</histograms>
	<s hide="true">
		<refMult 		draw="h" 	  logY="1"  />
		
		

		<cut 			draw="same h" linecolor="2" fillcolor="2" legend="After Cut, F" />
		
		<1D 			draw="h" />
		<log1D 			draw="h" logY="1" legend="2, 4, .1, .1" />
		<filled			draw="same h" fillcolor="2" linecolor="2" />

		<2D draw="colz" />
		<rcp draw="pe" logY="1" range=".1, 13" linecolor="2" linewidth="3" />
	</s>


	


</config>