<config>

	<!-- input of data and or root files -->
	<input>
		<rootIn file="qa.root" />
		<dataDir maxFiles="100" >/star/institutions/rice/jdb/run14/auau15/rcp/data/output/</dataDir>
	</input>

	<!-- output of root data file and PDF report -->
	<output>
		<base></base>
		<root>qa.root</root>
		<report>rqa.pdf</report>
	</output>

	<!-- histograms -->
	<histograms hide="true">
		<refMult      	type="1D" title="Reference Multiplicity"  				nBinsX="350" x1="0" x2="350"/>
		<central      	type="1D" title="Reference Multiplicity : central"  	nBinsX="350" x1="0" x2="350"/>
		<peripheral    	type="1D" title="Reference Multiplicity : peripheral"  	nBinsX="350" x1="0" x2="350"/>

		<ptAll        	type="1D" title="pt All centrality, Central, Peripheral"  nBinsX="50" x1="0" x2="5"/>
		<ptCentral    	type="1D" title="pt Central" 	nBinsX="50" x1="0" x2="5"/>
		<ptPeripheral  	type="1D" title="pt Peripheral" nBinsX="50" x1="0" x2="5"/>
		
		<ptPeripheralScaled  	type="1D" title="pt Peripheral" 							nBinsX="15" x1="0" x2="4"/>
		<ptRatio 		type="1D" title="R_{CP} (0-5%) / (60-80%); P_{T} [GeV/c]; R_{CP}" 	nBinsX="15" x1="0" x2="4"/>

		<vr 			type="1D" title="Vr" nBinsX="200" x1="0" x2="4"/>
		<vrCut 			type="1D" title="VrCut" nBinsX="200" x1="0" x2="4"/>
		<vrOffset 		type="1D" title="Vr Offset" nBinsX="200" x1="0" x2="4"/>
		
		<vz 			type="1D" title="Vz" nBinsX="600" x1="-300" x2="300"/>
		<vzCut 			type="1D" title="Vz Cut" nBinsX="600" x1="-300" x2="300"/>

		<vzOffset 		type="1D" title="Vz" nBinsX="600" x1="-300" x2="300"/>
		<vxy 			type="2D" title="Vr;x;y" nBinsX="600" x1="-3.5" x2="3.5" nBinsY="600" y1="-3.5" y2="3.5"/>
		<vxyOffset 		type="2D" title="Vr w/Offset;x;y" nBinsX="600" x1="-3.5" x2="3.5" nBinsY="600" y1="-3.5" y2="3.5"/>
	</histograms>
	<s hide="true">
		<refMult 		draw="h" 	  logY="1" range="0.1, 1000" />
		<peripheral 	draw="h same" linecolor="3" fillcolor="3" logY="1" range="0.1, 1000" />
		<central 		draw="h same" linecolor="2" fillcolor="2" logY="1" range="0.1, 1000" />
		<1D 			draw="h" />
		<filled			draw="same h" fillcolor="2" linecolor="2" />

		<2D draw="colz" />
		<rcp draw="pe" logY="1" range=".1, 13" />
	</s>


	<!-- Analysis cuts -->
	<cuts>
		<central>.05</central>
		<peripheral min=".60" max=".80" />
		<pt>0.1</pt>
		<vz min="-30" max="30" />
		<vrMax>1.5</vrMax>
		<vertexOffset x="0" y="-.9115" z="-9.392" />
	</cuts>

</config>