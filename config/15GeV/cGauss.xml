<?xml version="1.0" encoding="UTF-8"?>
<config>

	<jobType>SimultaneousPid</jobType>

	<SimultaneousPid>
		

		<histograms>
			<Histo name="yield" title="yield" xBins="binning.pt" />
		</histograms>

		<TofPidParams>
			<Pi>
				<mean t="-0.00198432" p="1.52356" ep="-0.38614"/>
				<sigma t="0.010814" p="0.0" ep="0.0"/>
			</Pi>
			<K>
				<mean t="-0.00500018" p="-0.104294" ep="-0.000645172"/>
				<sigma t="0.0111527" p="0.102938" ep="0.00755773"/>
			</K>
			<P>
				<mean t="-0.0070094" p="-1.02106" ep="0.288474"/>
				<sigma t="0.0117997" p="-0.280521" ep="0.00997338"/>
			</P>
		</TofPidParams>
		<DedxPidParams>
			<Pi>
				<sigma p0="0.0300288" p1="0.0" p2="-0.0000218021" p3="0.00266491" />
			</Pi>
			<K>
				<sigma p0="0.0324423" p1="0" p2="0.000381861" p3="0.0117648"/>
			</K>
			<P>
				<sigma p0="0.031696" p1="0.00171583" p2="0.0000900753" p3="0.00561743"/>
			</P>
		</DedxPidParams>

		<Logger>
			<logLevel>all</logLevel>
		</Logger>	
		<Reporter>
			<output url="rpSimGauss.pdf" />
		</Reporter>	
		<input>
			<data url="../products/phaseSpace/pidAll.root"/>
		</input>

		<output>
			<data>simGauss.root</data>
		</output>

		<Bichsel>
			<table>dedxBichsel.root</table>
			<method>0</method>
		</Bichsel>
		
		<ZRecentering>
			<centerSpecies>K</centerSpecies>
			<sigma tof="0.0115" dedx="0.033"/>
			<method>nonlinear</method>
		</ZRecentering>

	</SimultaneousPid>

	<binning hide="true" >

		<pt width="0.05" min="0.2" max="4.0" />
		<eta>0.0, 0.2 </eta>
		<charge> -0.5, 0.5 </charge>

		<tof width="0.0012" min="-2" max="2" />
		<dedx width="0.006" min="-2" max="2" />

		<padding tof=".15" dedx=".15" tofScale="0.05" dedxScale="0.05" />

	</binning>



	<RooRealVar name="zb" min="-.2" max=".2" />
	<RooRealVar name="zd" min="-.2" max=".2" />

	<RooRealVar name="zb_mu_Pi" value=".01" min="-.2" max=".2" />
	<RooRealVar name="zb_mu_K" value=".01" min="-.2" max=".2" />
	<RooRealVar name="zb_mu_P" value=".01" min="-.2" max=".2" />


</config>
