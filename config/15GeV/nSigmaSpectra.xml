<?xml version="1.0" encoding="UTF-8"?>
<config>

	<jobType>InclusiveSpectra</jobType>


	<ParamSpectra>
		<Logger>
			<logLevel>info</logLevel>
		</Logger>	
		
		<DataSource treeName="PicoDst" url="/Users/danielbrandenburg/bnl/local/data/Run14/LBNL/" maxFiles="4">
			
			<!-- Set all branches off -->
			<BranchStatus status="0">*</BranchStatus>
			<!-- Turn on only the ones you need -->
			<BranchStatus status="1">
				Event*,
				Track*
			</BranchStatus>
			
		</DataSource>

		<output>
			<data>paramSpectra.root</data>
			<report>rpParamSpectra.pdf</report>
		</output>

		<Bichsel>
			<table>dedxBichsel.root</table>
			<method>0</method>
