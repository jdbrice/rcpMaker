<?xml version="1.0" encoding="UTF-8"?>
<config>

	<jobType>MakePidParams</jobType>

	<PidParamMaker>
		<Logger color="true">
			<logLevel>info</logLevel>
		</Logger>	

		<input>
			<data url="/Users/danielbrandenburg/bnl/local/data/Run14/rcp/phaseSpace/15GeV/preview_2.root"/>
		</input>

		<output path="../products/pidParams/">
			<data>paramsForPid.root</data>
			<report></report>
		</output>

		<Bichsel>
			<table>dedxBichsel.root</table>
			<method>0</method>
		</Bichsel>

		<enhanceDistributions tof="1.0" dedx="1.0"/>
		
		<PhaseSpaceRecentering>
			<centerSpecies>K</centerSpecies>
			<sigma tof="0.012" dedx="0.03"/>
			<method>nonlinear</method>
		</PhaseSpaceRecentering>

		<histograms>
			<mean title="Mean For Species; p_{T} [GeV]" xBins="binning.pt" />
			<sigma title="Sigma For Species; p_{T} [GeV]" xBins="binning.pt" />
		</histograms>

		<FitRange>
			<Pi min=".5" max="1.2" />
			<K min=".5" max="1.2" />
			<P min=".5" max="2.0" />
		</FitRange>
		<PlotRange>
			<muPi min="-0.02" max="0.02" />
			<muK min="-0.01" max="0.01" />
			<sigmaK min="-0.035" max="0.025" />
			<muP min="-0.02" max="0.8" />
		</PlotRange>


	</PidParamMaker>

	<binning hide="true" >

		<!-- Based on Evan's thesis.v5.pdf -->
		<!-- .1 from .5 to 2.5 => 15 bins -->
		<!-- .2 from 2.0 to 3.0 => 5 bins -->
		<pt>
			0.5, 0.6, 0.7, 0.8, 0.9, 1.0, 1.1, 1.2, 1.3, 1.4, 1.5, 1.6, 1.7, 1.8, 1.9, 2.0, 
			2.2, 2.4, 2.6, 2.8, 3.0, 	
			3.4,						
			4.4,					
			5.0
		</pt>
		
		<eta>0.0, 0.2, 0.4, 0.5 </eta>

		<charge> -1.5, -0.5, 0.5, 1.5 </charge>

		<tof width="0.006" min="-1" max="1" />
		<dedx width="0.03" min="-0.75" max="0.75" />
		<!--
		<tof width="0.006" min="-1" max="1" />
		<dedx width="0.015" min="-0.75" max="0.75" />
		-->
		<tofRaw width="0.0024" min="0.9" max="3" />
		<dedxRaw width="0.012" min="1" max="6cd" />

		<padding tof=".15" dedx=".15" tofScale="0.05" dedxScale="0.05" />

	</binning>

</config>
