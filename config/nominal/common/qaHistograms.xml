
<?xml version="1.0" encoding="UTF-8"?>

<config>
	<QAHistograms>
		<Event>

			<!-- RefMult Inspection -->
			<Histo name="pre_refMult" title="Raw RefMult" xBins="binning.refMult" />
			<Histo name="refMult" title="Raw RefMult" xBins="binning.refMult" />
			<Histo name="corrRefMult" title="Corrected RefMult" xBins="binning.corrRefMult" />
			<Histo name="refMultBin9" title="Corrected refMult in Bin9" xBins="binning.rm9" />
			<Histo name="refMultBin16" title="Corrected refMult in Bin16" xBins="binning.rm16" />
			<Histo name="mappedRefMultBins" title="Mapped RefMult Bins; refMult Bin; #"   xBins="binning.rm9" />


			<!-- Event Cuts -->
			<Histo name="cuts" title="Event Cuts" nBinsX="2" minX="0" maxX="2" />
			<Histo name="mass" title="Mass Assumption for Rapidity" nBinsX="2" minX="0" maxX="2" />
		</Event>


		<Track>
			<Histo name="cuts" title="Track Cuts" nBinsX="15" minX="0" maxX="15" />

			<Histo name="dca" title="DCA" widthX=".1" minX="0" maxX="3" />
			<Histo name="pre_dca" title="DCA" widthX=".1" minX="0" maxX="3" />

			<Histo name="nHitsFit" title="# Hits Fit / Possible" nBinsX="50" minX="-0.5" maxX="49.5" />
			<Histo name="pre_nHitsFit" title="# Hits Fit / Possible" nBinsX="50" minX="-0.5" maxX="49.5" />

			<Histo name="nHitsFitOverPossible" title="# Hits Fit / Possible" widthX="0.01" minX="0" maxX="1" />
			<Histo name="pre_nHitsFitOverPossible" title="# Hits Fit / Possible" widthX="0.01" minX="0" maxX="1" />	

			<Histo name="nHitsPossible" title="# Hits Fit / Possible" nBinsX="50" minX="-0.5" maxX="49.5" />
			<Histo name="pre_nHitsPossible" title="# Hits Fit / Possible" nBinsX="50" minX="-0.5" maxX="49.5" />
			
			<Histo name="nHitsFitVsPossible" title="# Hits Fit vs. # Hits Possible" nBinsX="50" minX="-0.5" maxX="49.5" nBinsY="50" minY="-0.5" maxY="49.5" />
			<Histo name="pre_nHitsFitVsPossible" title="# Hits Fit vs. # Hits Possible; # HitsFit; # HitsPossilbe" nBinsX="50" minX="-0.5" maxX="49.5" nBinsY="50" minY="-0.5" maxY="49.5" />

			<Histo name="nHitsDedx" title="# Hits dEdx" nBinsX="50" minX="-0.5" maxX="49.5" />
			<Histo name="pre_nHitsDedx" title="# Hits dEdx" nBinsX="50" minX="-0.5" maxX="49.5" />
			
			<Histo name="ptPrimary" title="ptPrimary" widthX=".1" minX="0.0" maxX="5.0" />
			<Histo name="pre_ptPrimary" title="ptPrimary" widthX=".1" minX="0.0" maxX="5.0" />

			<Histo name="ptGlobal" title="ptGlobal" widthX=".1" minX="0.0" maxX="5.0" />
			<Histo name="pre_ptGlobal" title="ptGlobal" widthX=".1" minX="0.0" maxX="5.0" />

			<Histo name="ptGlobalVsPrimary" title="ptGlobal / ptPrimary; ptPrimary; ptGlobal" widthX=".1" minX="0.0" maxX="5.0" widthY=".1" minY="0.0" maxY="5.0"/>
			<Histo name="pre_ptGlobalVsPrimary" title="ptGlobal / ptPrimary; ptPrimary; ptGlobal" widthX=".1" minX="0.0" maxX="5.0" widthY=".1" minY="0.0" maxY="5.0"/>

			<Histo name="ptGlobalOverPrimary" title="ptGlobal / ptPrimary" widthX="0.01" minX="0" maxX="2" />
			<Histo name="pre_ptGlobalOverPrimary" title="ptGlobal / ptPrimary" widthX="0.01" minX="0" maxX="2" />

			<Histo name="yLocal" title="yLocal" widthX=".1" minX="-2.5" maxX="2.5" />
			<Histo name="pre_yLocal" title="yLocal" widthX=".1" minX="-2.5" maxX="2.5" />

			<Histo name="zLocal" title="zLocal" widthX=".1" minX="-3.5" maxX="3.5" />
			<Histo name="pre_zLocal" title="zLocal" widthX=".1" minX="-3.5" maxX="3.5" />		

			<Histo name="matchFlag" title="matchFlag" widthX="1" minX="0" maxX="3" />
			<Histo name="pre_matchFlag" title="matchFlag" widthX="1" minX="0" maxX="3" />		

			<Histo name="eta" title="eta" widthX=".1" minX="-1.2" maxX="1.2" />
			<Histo name="pre_eta" title="eta" widthX="0.1" minX="-1.2" maxX="1.2" />		

			<Histo name="rapidity" title="rapidity" widthX="0.05" minX="-0.3" maxX="0.3" />
			<Histo name="pre_rapidity" title="rapidity" widthX="0.05" minX="-1.2" maxX="1.3" />		
			
		</Track>

	</QAHistograms>
</config>
